{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run PipeComLaunch (release)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/release/bin/PipeComLaunch",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/release/bin",
      "environment": [],
      "MIMode": "gdb",
      "externalConsole": true
    },

    {
        "name": "Debug PipeComLaunch (debug)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/debug/bin/PipeComLaunch",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/build/debug/bin",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
              "description": "Enable pretty-printing",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
        ]
    },

    {
        "name": "Python + C++ (pybind11)",
        "type": "cppdbg",
        "request": "launch",
        "program": "/usr/bin/python3",
        "args": ["python/test_pipecom.py"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [
            {
                "name": "PYTHONPATH",
                "value": "${workspaceFolder}/build/debug/python"
            }
        ],
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
            {
                "description": "Enable pretty printing",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }

  ]
}

